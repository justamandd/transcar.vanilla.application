{
    "compilerOptions": {
      "target": "es2017",
      "allowSyntheticDefaultImports": false,
      "baseUrl": "./",
      "paths": {
        "@app/*": ["src/*"],
        "@config/*": ["src/config/*"],
        "@services/*": ["src/services/*"],
        "@controllers/*": ["src/controllers/*"],
        "@routes/*": ["src/routes/*"],
        "@db/*": ["./*"]
      }
    },
    "exclude": ["node_modules", "dist"]
  }